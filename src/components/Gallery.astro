<style>
    section{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-top: 5rem;
    }

    section h1{
        font-size: 5rem;
        margin: 1rem;
        color: var(--white);
        font-family: var(--primaryFont);
    }

    .gallery{
        columns: 3;
        column-gap: 1rem;
        margin: 1rem;
    }

    .gallery img{
        width: 100%;
        height: auto;
        border-radius: 1rem;
        cursor: pointer;

        transition: all 0.3s ease-in-out;
    }

    .gallery img:hover{
        transform: scale(1.01);
        filter: brightness(1.2);
    }
</style>

<script>
    import PhotoSwipeLightbox from 'photoswipe/lightbox';

    const lightbox = new PhotoSwipeLightbox({
        gallery: '#gallery',
        children: 'a',
        pswpModule: () => import('photoswipe')
    });
    lightbox.init();
</script>